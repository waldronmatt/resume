{
  "name": "resume",
  "private": true,
  "description": "The code for my resume.",
  "main": "index.js",
  "scripts": {
    "dev": "yarn serve && yarn export",
    "build": "yarn compile && yarn export",
    "serve": "resume serve --theme . --resume src/resume.json",
    "compile": "resume export --theme . ./public/index.html --resume src/resume.json",
    "export": "resume export public/resume.pdf --theme . --resume src/resume.json",
    "bootstrap:ci": "yarn install --frozen-lockfile --ignore-engines",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "yarn lint:prettier",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldronmatt/resume.git"
  },
  "author": "Matthew Waldron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waldronmatt/resume/issues"
  },
  "homepage": "https://github.com/waldronmatt/resume#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@waldronmatt/commitlint-config": "^1.1.4",
    "@waldronmatt/prettier-config": "^1.3.1",
    "@waldronmatt/semantic-release-config": "^2.0.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "resume-cli": "^3.0.7"
  }
}
